{
"compilerOptions": {
"target": "ES2018",
"module": "commonjs",
"lib": ["es2018", "esnext.asynciterable"],
"experimentalDecorators": true,
"emitDecoratorMetadata": true,
"moduleResolution": "node",
"outDir": "./dist",
"esModuleInterop": true,
"strict": true,
"strictPropertyInitialization": false,
"skipLibCheck": true,
"sourceMap": true,
"baseUrl": ".",
"paths": {
"*": ["node_modules/*"]
}
},
"include": ["src/**/*"],
"exclude": ["node_modules"]
}
